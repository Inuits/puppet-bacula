### File managed with puppet ###
### Served by:        '<%= scope.lookupvar('::servername') %>'
### Module:           '<%= scope.to_hash['module_name'] %>'
### Template source:  '<%= template_source %>'

#
# File Daemon configuration
#

FileDaemon {
  Name                    = <%= client %>-fd
  FDport                  = <%= port %>
  WorkingDirectory        = <%= working_dir %>
  Pid Directory           = <%= pid_dir %>
  Maximum Concurrent Jobs = <%= max_concurrent_jobs %>
}

#
# List of directors allowed to connect to this File Daemon
#

Director {
  Name                    = "<%= allowed_director_label %>"
  Password                = "<%= allowed_director_password %>"
}

#
# Logging
#

Messages {
  name                    = "bacula-fd on ${::fqdn}"
  append                  = "<%= log_dir %>/bacula-fd.log"
  director                = "<%= allowed_director_label %> = all, !skipped, !restored"
}
