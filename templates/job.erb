
Job {
	Name = "<%= name %>"
  	Client = <%= hostname %>-fd
	JobDefs = "<%= jobdefs %>"
	Write Bootstrap = "/var/spool/bacula/Client1.bsr"
<% if has_variable('fileset') -%>
	Fileset = <%= fileset %>
<% end -%>
	Storage = <%= storage %>
	Full Backup Pool = <%= full_pool %>
	Incremental Backup Pool = <%= incremental_pool %>
<% if has_variable('schedule') -%>
	Schedule = <%= schedule %>
<% end -%>
}

Job {
	Name = "<%= name %>-res"
	Client = <%= hostname %>-fd
	Type = Restore
	FileSet = "FullSet"
	Storage = <%= storage %>
	Full Backup Pool = <%= hostname %>FullPool
	Incremental Backup Pool = <%= hostname %>IncPool
	Messages = Standard
	Where = /tmp/bacula-restores
}
